# Environment configuration for DAOShip Frontend

# API Configuration
VITE_API_BASE_URL=http://localhost:3000/api
VITE_LEGACY_API_BASE_URL=http://localhost:3000/api

# GitHub Configuration (set your token here or leave empty for public repos only)
# To generate a token: https://github.com/settings/tokens
# Required scopes: repo, user:email
VITE_GITHUB_TOKEN=your_github_token_here

# Firebase Configuration
VITE_FIREBASE_DEBUG=true

# Aptos Configuration
VITE_APTOS_NETWORK=testnet
VITE_APTOS_NODE_URL=https://fullnode.testnet.aptoslabs.com/v1
VITE_APTOS_FAUCET_URL=https://faucet.testnet.aptoslabs.com

# Contract Addresses (update these with your deployed contracts)
VITE_DAO_CONTRACT_ADDRESS=0x42
VITE_GOVERNANCE_TOKEN_ADDRESS=0x42

# Application Configuration
VITE_APP_NAME=DAOShip
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION=Decentralized Autonomous Organization Platform

# Development Configuration
VITE_DEV_MODE=true
VITE_ENABLE_LOGGING=true

# Feature Flags
VITE_ENABLE_MOCK_DATA=false
VITE_ENABLE_PETRA_WALLET=true
VITE_ENABLE_MARTIAN_WALLET=false
VITE_ENABLE_PONTEM_WALLET=false
